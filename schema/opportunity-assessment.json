{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/opportunity-assessment-v1.0.json",
  "title": "Forgepoint Opportunity Assessment Schema",
  "description": "Schema for Marty Cagan-style Opportunity Assessment documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "opportunity-assessment",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this opportunity assessment"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "rejected", "archived"],
      "description": "Current status of the assessment"
    },
    "opportunity-size": {
      "type": "string",
      "enum": ["small", "medium", "large", "massive"],
      "description": "Size of the opportunity"
    },
    "confidence-level": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "description": "Confidence in the assessment"
    },
    "effort-estimate": {
      "type": "string",
      "enum": ["weeks", "months", "quarters", "years"],
      "description": "Estimated effort required"
    },
    "owner": {
      "type": "string",
      "description": "Opportunity owner"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key stakeholders"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Assessment author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "opportunity-size", "confidence-level", "effort-estimate", "owner", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "What problem will this solve?",
        "For whom do we solve that problem?",
        "How big is the opportunity?",
        "What alternatives are out there?",
        "Why are we best suited to pursue this?",
        "Why now?",
        "How will we get users and participants?",
        "How will we measure success?",
        "What factors are most likely to hinder our success?",
        "What assumptions do we have that, if proven wrong, would cause this project to fail?"
      ],
      "optional": [],
      "description": "The 10 standard questions for opportunity assessment"
    }
  }
}