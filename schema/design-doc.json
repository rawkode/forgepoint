{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/design-doc-v1.0.json",
  "title": "Forgepoint Design Document Schema",
  "description": "Schema for Technical Design Document in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "design-doc",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this design document"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "implemented", "obsolete"],
      "description": "Current status of the design document"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Design document version"
    },
    "design-type": {
      "type": "string",
      "enum": ["system", "component", "algorithm", "data", "api", "ui-ux"],
      "description": "Type of design document"
    },
    "complexity": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "description": "Design complexity level"
    },
    "designer": {
      "type": "string",
      "description": "Primary designer"
    },
    "reviewers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Design reviewers"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key stakeholders"
    },
    "implementation-team": {
      "type": "string",
      "description": "Team responsible for implementation"
    },
    "target-release": {
      "type": "string",
      "description": "Target release or milestone"
    },
    "related-prds": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Related PRD references"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Design document author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "version", "design-type", "complexity", "designer", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Overview",
        "Goals",
        "Design",
        "Implementation Plan"
      ],
      "optional": [
        "Background",
        "Requirements",
        "Constraints",
        "Alternatives Considered",
        "Trade-offs",
        "Performance Considerations",
        "Security Considerations",
        "Testing Plan",
        "Rollout Plan",
        "Monitoring and Alerting",
        "Future Work",
        "Appendices"
      ],
      "description": "Required and optional sections for design document"
    }
  }
}