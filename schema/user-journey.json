{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/user-journey-v1.0.json",
  "title": "Forgepoint User Journey Schema",
  "description": "Schema for User Journey mapping documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "user-journey",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this user journey"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "validated", "active", "archived"],
      "description": "Current status of the user journey"
    },
    "persona": {
      "type": "string",
      "description": "Primary user persona"
    },
    "scenario": {
      "type": "string",
      "description": "Journey scenario or use case"
    },
    "journey-type": {
      "type": "string",
      "enum": ["current-state", "future-state", "ideal-state"],
      "description": "Type of journey mapping"
    },
    "scope": {
      "type": "string",
      "enum": ["awareness", "consideration", "purchase", "onboarding", "usage", "support", "renewal"],
      "description": "Journey scope or phase"
    },
    "touchpoints": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key touchpoints in the journey"
    },
    "research-source": {
      "type": "string",
      "description": "Source of user research"
    },
    "author": {
      "type": "string",
      "description": "Journey author"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Journey stakeholders"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "persona", "scenario", "journey-type", "scope", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Journey Overview",
        "Journey Stages",
        "Touchpoints",
        "Pain Points",
        "Opportunities"
      ],
      "optional": [
        "Persona Details",
        "Goals and Motivations",
        "Emotions",
        "Actions",
        "Channels",
        "Backstage Actions",
        "Supporting Processes",
        "Metrics"
      ],
      "description": "Required and optional sections for user journey documents"
    }
  }
}