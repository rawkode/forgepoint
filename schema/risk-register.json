{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/risk-register-v1.0.json",
  "title": "Forgepoint Risk Register Schema",
  "description": "Schema for Risk Register documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "risk-register",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this risk register"
    },
    "status": {
      "type": "string",
      "enum": ["active", "archived"],
      "description": "Current status of the risk register"
    },
    "scope": {
      "type": "string",
      "enum": ["project", "product", "team", "organization"],
      "description": "Scope of risk management"
    },
    "project": {
      "type": "string",
      "description": "Related project name"
    },
    "owner": {
      "type": "string",
      "description": "Risk register owner"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Risk management stakeholders"
    },
    "review-frequency": {
      "type": "string",
      "enum": ["weekly", "biweekly", "monthly", "quarterly"],
      "description": "How often risks are reviewed"
    },
    "last-review": {
      "type": "string",
      "format": "date",
      "description": "Last risk review date (YYYY-MM-DD)"
    },
    "next-review": {
      "type": "string",
      "format": "date",
      "description": "Next scheduled review date (YYYY-MM-DD)"
    },
    "risk-tolerance": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "description": "Organizational risk tolerance"
    },
    "escalation-threshold": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Risk level requiring escalation"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Risk register author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "scope", "owner", "review-frequency", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Risk Overview",
        "Risk Identification",
        "Risk Assessment",
        "Risk Mitigation"
      ],
      "optional": [
        "Risk Framework",
        "Risk Categories",
        "Closed Risks",
        "Escalation Process",
        "Review History",
        "Lessons Learned"
      ],
      "description": "Required and optional sections for risk register documents"
    },
    "riskFormat": {
      "columns": ["ID", "Description", "Category", "Probability", "Impact", "Risk Level", "Owner", "Mitigation Plan", "Status"],
      "description": "Standard risk register table format"
    }
  }
}