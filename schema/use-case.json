{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/use-case-v1.0.json",
  "title": "Forgepoint Use Case Schema",
  "description": "Schema for Use Case documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "use-case",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this use case"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "implemented", "archived"],
      "description": "Current status of the use case"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Use case priority"
    },
    "complexity": {
      "type": "string",
      "enum": ["simple", "normal", "complex"],
      "description": "Use case complexity"
    },
    "primary-actor": {
      "type": "string",
      "description": "Main user or system initiating the use case"
    },
    "secondary-actors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Additional actors involved"
    },
    "system": {
      "type": "string",
      "description": "System or component being described"
    },
    "trigger": {
      "type": "string",
      "description": "What triggers this use case"
    },
    "author": {
      "type": "string",
      "description": "Use case author"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "priority", "primary-actor", "system", "trigger", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Goal",
        "Preconditions",
        "Main Success Scenario",
        "Postconditions"
      ],
      "optional": [
        "Brief Description",
        "Alternative Flows",
        "Exception Flows",
        "Business Rules",
        "Special Requirements",
        "Notes"
      ],
      "description": "Required and optional sections for use case documents"
    }
  }
}