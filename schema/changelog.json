{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/changelog-v1.0.json",
  "title": "Forgepoint Changelog Schema",
  "description": "Schema for Changelog documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "changelog",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this changelog"
    },
    "status": {
      "type": "string",
      "enum": ["active", "archived"],
      "description": "Current status of the changelog"
    },
    "product": {
      "type": "string",
      "description": "Product name"
    },
    "format": {
      "type": "string",
      "enum": ["keep-a-changelog", "semantic-versioning", "conventional-commits"],
      "description": "Changelog format standard"
    },
    "audience": {
      "type": "string",
      "enum": ["developers", "users", "internal", "public"],
      "description": "Target audience"
    },
    "maintainer": {
      "type": "string",
      "description": "Changelog maintainer"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source code repository"
    },
    "latest-version": {
      "type": "string",
      "description": "Latest released version"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Changelog author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "product", "format", "audience", "maintainer", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title (usually 'Changelog')"
    },
    "sections": {
      "required": [
        "Unreleased"
      ],
      "optional": [
        "Guiding Principles",
        "FAQ"
      ],
      "description": "Required and optional sections for changelog documents"
    },
    "versionSections": {
      "format": "## [Version] - YYYY-MM-DD",
      "subsections": ["Added", "Changed", "Deprecated", "Removed", "Fixed", "Security"],
      "description": "Each version should have date and categorized changes"
    }
  }
}