{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/prd-v1.0.json",
  "title": "Forgepoint Product Requirements Document Schema",
  "description": "Schema for PRD documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "prd",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this PRD"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "archived"],
      "description": "Current status of the PRD"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Document version (e.g., 1.0, 2.1.3)"
    },
    "product": {
      "type": "string",
      "description": "Product name"
    },
    "owner": {
      "type": "string",
      "description": "Product owner"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of stakeholders"
    },
    "target-release": {
      "type": "string",
      "format": "date",
      "description": "Target release date (YYYY-MM-DD)"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "PRD author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "version", "product", "owner", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Problem Statement",
        "Goals",
        "Success Metrics",
        "Requirements"
      ],
      "optional": [
        "Background",
        "User Stories", 
        "Technical Requirements",
        "Dependencies",
        "Timeline",
        "Risks",
        "Open Questions"
      ],
      "description": "Required and optional sections for PRD documents"
    },
    "abstract": {
      "required": true,
      "description": "PRDs should have an abstract summarizing the product"
    }
  }
}