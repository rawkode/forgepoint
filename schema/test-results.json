{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/test-results-v1.0.json",
  "title": "Forgepoint Test Results Schema",
  "description": "Schema for Test Results documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "test-results",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this test results"
    },
    "status": {
      "type": "string",
      "enum": ["in-progress", "completed", "failed", "cancelled"],
      "description": "Current status of test execution"
    },
    "test-plan": {
      "type": "string",
      "description": "Related test plan (reference ID)"
    },
    "test-cycle": {
      "type": "string",
      "description": "Test cycle identifier"
    },
    "version": {
      "type": "string",
      "description": "Version tested"
    },
    "environment": {
      "type": "string",
      "description": "Test environment"
    },
    "executor": {
      "type": "string",
      "description": "Test executor"
    },
    "execution-date": {
      "type": "string",
      "format": "date",
      "description": "Test execution date (YYYY-MM-DD)"
    },
    "summary": {
      "type": "object",
      "properties": {
        "total": {
          "type": "integer"
        },
        "passed": {
          "type": "integer"
        },
        "failed": {
          "type": "integer"
        },
        "blocked": {
          "type": "integer"
        },
        "skipped": {
          "type": "integer"
        }
      },
      "description": "Test execution summary"
    },
    "pass-rate": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Pass rate percentage"
    },
    "defects-found": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of defects found"
    },
    "coverage": {
      "type": "object",
      "properties": {
        "requirements": {
          "type": "number"
        },
        "code": {
          "type": "number"
        },
        "features": {
          "type": "number"
        }
      },
      "description": "Coverage metrics"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Test results author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "test-plan", "version", "environment", "executor", "execution-date", "summary", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Executive Summary",
        "Test Results Summary",
        "Detailed Results",
        "Defects Found"
      ],
      "optional": [
        "Test Environment",
        "Coverage Analysis",
        "Performance Metrics",
        "Recommendations",
        "Risk Assessment",
        "Attachments"
      ],
      "description": "Required and optional sections for test results documents"
    }
  }
}