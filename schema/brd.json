{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/brd-v1.0.json",
  "title": "Forgepoint Business Requirements Document Schema",
  "description": "Schema for Business Requirements Document (BRD) in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "brd",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this BRD"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "implemented", "archived"],
      "description": "Current status of the BRD"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Document version (e.g., 1.0, 2.1.3)"
    },
    "project": {
      "type": "string",
      "description": "Project name"
    },
    "business-owner": {
      "type": "string",
      "description": "Business owner or sponsor"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Business stakeholders"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Business priority"
    },
    "budget": {
      "type": "string",
      "description": "Budget allocation"
    },
    "deadline": {
      "type": "string",
      "format": "date",
      "description": "Business deadline (YYYY-MM-DD)"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "BRD author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "version", "project", "business-owner", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Business Objectives",
        "Scope", 
        "Business Requirements",
        "Success Criteria"
      ],
      "optional": [
        "Executive Summary",
        "Background",
        "Current State",
        "Future State",
        "Cost-Benefit Analysis",
        "Risks",
        "Timeline"
      ],
      "description": "Required and optional sections for BRD documents"
    }
  }
}