{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/prfaq-v1.0.json",
  "title": "Forgepoint PRFAQ Schema",
  "description": "Schema for PRFAQ (Press Release + FAQ) documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "prfaq",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this PRFAQ"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "launched", "archived"],
      "description": "Current status of the PRFAQ"
    },
    "product": {
      "type": "string",
      "description": "Product or feature name"
    },
    "launch-date": {
      "type": "string",
      "format": "date",
      "description": "Planned launch date (YYYY-MM-DD)"
    },
    "owner": {
      "type": "string",
      "description": "Product owner"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key stakeholders"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "PRFAQ author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "product", "owner", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": ["Press Release", "FAQ"],
      "optional": ["Background", "Success Metrics", "Timeline", "Resources"],
      "description": "Required and optional sections for PRFAQ documents"
    },
    "pressRelease": {
      "subsections": ["Headline", "Summary", "Problem", "Solution", "Quote", "Getting Started"],
      "description": "Press Release must include standard PR subsections"
    }
  }
}