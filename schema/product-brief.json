{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/product-brief-v1.0.json",
  "title": "Forgepoint Product Brief Schema",
  "description": "Schema for lightweight Product Brief documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "product-brief",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this product brief"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "active", "archived"],
      "description": "Current status of the product brief"
    },
    "product": {
      "type": "string",
      "description": "Product name"
    },
    "owner": {
      "type": "string",
      "description": "Product owner"
    },
    "target-audience": {
      "type": "string",
      "description": "Target user audience"
    },
    "timeline": {
      "type": "string",
      "description": "Expected timeline"
    },
    "budget": {
      "type": "string",
      "description": "Budget estimate"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Product priority"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Brief author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "product", "owner", "target-audience", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Overview",
        "User Need",
        "Business Goal",
        "Key Features"
      ],
      "optional": [
        "Success Metrics",
        "Assumptions",
        "Constraints",
        "Dependencies",
        "Timeline"
      ],
      "description": "Required and optional sections for product brief documents"
    },
    "abstract": {
      "required": true,
      "description": "Brief should have an executive summary"
    }
  }
}