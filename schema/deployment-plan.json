{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/deployment-plan-v1.0.json",
  "title": "Forgepoint Deployment Plan Schema",
  "description": "Schema for Deployment Plan documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "deployment-plan",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this deployment plan"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "approved", "scheduled", "in-progress", "completed", "failed", "rolled-back"],
      "description": "Current status of the deployment"
    },
    "deployment-type": {
      "type": "string",
      "enum": ["blue-green", "canary", "rolling", "big-bang", "maintenance"],
      "description": "Type of deployment strategy"
    },
    "version": {
      "type": "string",
      "description": "Version being deployed"
    },
    "environment": {
      "type": "string",
      "enum": ["development", "staging", "production", "qa", "uat"],
      "description": "Target environment"
    },
    "scheduled-date": {
      "type": "string",
      "format": "date-time",
      "description": "Scheduled deployment date and time"
    },
    "maintenance-window": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date-time"
        },
        "end": {
          "type": "string",
          "format": "date-time"
        }
      },
      "description": "Maintenance window"
    },
    "deployment-lead": {
      "type": "string",
      "description": "Deployment lead"
    },
    "team": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Deployment team members"
    },
    "rollback-plan": {
      "type": "string",
      "description": "Rollback strategy reference"
    },
    "risk-level": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Deployment risk level"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Deployment dependencies"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Deployment plan author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "deployment-type", "version", "environment", "deployment-lead", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Deployment Overview",
        "Pre-deployment Steps",
        "Deployment Steps",
        "Post-deployment Steps",
        "Rollback Plan",
        "Verification"
      ],
      "optional": [
        "Risk Assessment",
        "Communication Plan",
        "Monitoring",
        "Success Criteria",
        "Contact Information",
        "Lessons Learned"
      ],
      "description": "Required and optional sections for deployment plan documents"
    }
  }
}