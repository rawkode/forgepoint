{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/vision-strategy-v1.0.json",
  "title": "Forgepoint Vision & Strategy Schema",
  "description": "Schema for Product Vision & Strategy documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "vision-strategy",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this vision & strategy"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "active", "archived"],
      "description": "Current status of the vision & strategy"
    },
    "scope": {
      "type": "string",
      "enum": ["product", "company", "division", "team"],
      "description": "Scope of the vision and strategy"
    },
    "timeframe": {
      "type": "string",
      "enum": ["1-year", "2-year", "3-year", "5-year", "10-year"],
      "description": "Strategic timeframe"
    },
    "owner": {
      "type": "string",
      "description": "Strategy owner"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key stakeholders"
    },
    "last-review": {
      "type": "string",
      "format": "date",
      "description": "Last strategic review date (YYYY-MM-DD)"
    },
    "next-review": {
      "type": "string",
      "format": "date",
      "description": "Next scheduled review date (YYYY-MM-DD)"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Strategy author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "scope", "timeframe", "owner", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Vision",
        "Mission",
        "Strategic Objectives",
        "Key Initiatives"
      ],
      "optional": [
        "Market Analysis",
        "Competitive Landscape",
        "Success Metrics",
        "Resource Requirements",
        "Risks and Mitigation",
        "Timeline",
        "Review Process"
      ],
      "description": "Required and optional sections for vision & strategy documents"
    }
  }
}