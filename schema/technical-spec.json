{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/technical-spec-v1.0.json",
  "title": "Forgepoint Technical Specification Schema",
  "description": "Schema for Technical Specification documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "technical-spec",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this technical spec"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "implemented", "deprecated"],
      "description": "Current status of the technical spec"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Specification version"
    },
    "component": {
      "type": "string",
      "description": "Component or system being specified"
    },
    "architecture-tier": {
      "type": "string",
      "enum": ["frontend", "backend", "database", "infrastructure", "integration"],
      "description": "Architecture tier"
    },
    "technology-stack": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technologies used"
    },
    "owner": {
      "type": "string",
      "description": "Technical owner"
    },
    "reviewers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technical reviewers"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technical dependencies"
    },
    "implementation-timeline": {
      "type": "string",
      "description": "Expected implementation timeline"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Spec author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "version", "component", "architecture-tier", "owner", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Overview",
        "Requirements",
        "Architecture",
        "Implementation Details"
      ],
      "optional": [
        "Background",
        "Assumptions",
        "Constraints",
        "API Specifications",
        "Database Schema",
        "Security Considerations",
        "Performance Requirements",
        "Testing Strategy",
        "Deployment",
        "Monitoring",
        "References"
      ],
      "description": "Required and optional sections for technical specification documents"
    }
  }
}