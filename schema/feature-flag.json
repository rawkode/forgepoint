{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/feature-flag-v1.0.json",
  "title": "Forgepoint Feature Flag Schema",
  "description": "Schema for Feature Flag documentation in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "feature-flag",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this feature flag"
    },
    "status": {
      "type": "string",
      "enum": ["planned", "active", "graduated", "deprecated", "removed"],
      "description": "Current status of the feature flag"
    },
    "flag-key": {
      "type": "string",
      "description": "Feature flag key in the system"
    },
    "flag-type": {
      "type": "string",
      "enum": ["release", "experiment", "operational", "permission"],
      "description": "Type of feature flag"
    },
    "default-value": {
      "type": "string",
      "description": "Default flag value"
    },
    "variations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Possible flag variations"
    },
    "targeting": {
      "type": "string",
      "description": "Targeting rules or audience"
    },
    "rollout-percentage": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "Current rollout percentage"
    },
    "owner": {
      "type": "string",
      "description": "Feature flag owner"
    },
    "feature": {
      "type": "string",
      "description": "Related feature or story (reference ID)"
    },
    "environments": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Environments where flag is active"
    },
    "creation-date": {
      "type": "string",
      "format": "date",
      "description": "Flag creation date (YYYY-MM-DD)"
    },
    "expiry-date": {
      "type": "string",
      "format": "date",
      "description": "Planned removal date (YYYY-MM-DD)"
    },
    "success-criteria": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Criteria for graduation"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Feature flag document author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "flag-key", "flag-type", "default-value", "owner", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Purpose",
        "Implementation",
        "Rollout Plan"
      ],
      "optional": [
        "Background",
        "Success Criteria",
        "Monitoring",
        "Rollback Plan",
        "Cleanup Plan",
        "Related Flags",
        "Change History"
      ],
      "description": "Required and optional sections for feature flag documents"
    }
  }
}