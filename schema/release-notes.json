{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/release-notes-v1.0.json",
  "title": "Forgepoint Release Notes Schema",
  "description": "Schema for Release Notes documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "release-notes",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this release"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "ready", "published", "archived"],
      "description": "Current status of the release notes"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?(-[a-zA-Z0-9]+)?$",
      "description": "Release version (semantic versioning)"
    },
    "release-date": {
      "type": "string",
      "format": "date",
      "description": "Release date (YYYY-MM-DD)"
    },
    "release-type": {
      "type": "string",
      "enum": ["major", "minor", "patch", "hotfix", "beta", "rc"],
      "description": "Type of release"
    },
    "product": {
      "type": "string",
      "description": "Product name"
    },
    "audience": {
      "type": "string",
      "enum": ["internal", "public", "beta", "enterprise"],
      "description": "Target audience"
    },
    "migration-required": {
      "type": "boolean",
      "description": "Whether this release requires migration steps"
    },
    "breaking-changes": {
      "type": "boolean",
      "description": "Whether this release contains breaking changes"
    },
    "author": {
      "type": "string",
      "description": "Release notes author"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "version", "release-date", "release-type", "product", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "format": "{product} {version} Release Notes",
      "description": "Title should include product and version"
    },
    "sections": {
      "required": ["What's New"],
      "optional": [
        "Breaking Changes",
        "New Features",
        "Improvements",
        "Bug Fixes",
        "Security Updates",
        "Migration Guide",
        "Known Issues",
        "Deprecations",
        "Thank You"
      ],
      "description": "Required and optional sections for release notes"
    }
  }
}