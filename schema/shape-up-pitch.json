{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/shape-up-pitch-v1.0.json",
  "title": "Forgepoint Shape Up Pitch Schema",
  "description": "Schema for Shape Up Pitch documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "shape-up-pitch",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this pitch"
    },
    "status": {
      "type": "string",
      "enum": ["idea", "shaping", "pitched", "bet", "building", "shipped", "rejected"],
      "description": "Current status in Shape Up process"
    },
    "appetite": {
      "type": "string",
      "enum": ["small-batch", "big-batch"],
      "description": "Time appetite (2 weeks or 6 weeks)"
    },
    "cycle": {
      "type": "string",
      "description": "Shape Up cycle identifier"
    },
    "circuit-breaker": {
      "type": "string",
      "description": "When to stop if stuck"
    },
    "shaper": {
      "type": "string",
      "description": "Person who shaped this pitch"
    },
    "betting-table": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "People at the betting table"
    },
    "team": {
      "type": "object",
      "properties": {
        "designer": {
          "type": "string"
        },
        "programmers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "description": "Assigned team (if bet)"
    },
    "cool-down": {
      "type": "boolean",
      "description": "Whether this went through a cool-down period"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Pitch author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "appetite", "shaper", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Problem",
        "Solution",
        "Rabbit Holes",
        "No-gos"
      ],
      "optional": [
        "Appetite",
        "How We'll Know It's Working",
        "Out of Bounds",
        "Fat Marker Sketches",
        "Elements",
        "Risks"
      ],
      "description": "Required and optional sections for Shape Up pitch documents"
    }
  }
}