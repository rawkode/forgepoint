{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/safe-feature-v1.0.json",
  "title": "Forgepoint SAFe Feature Schema",
  "description": "Schema for SAFe Feature documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "safe-feature",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this SAFe feature"
    },
    "status": {
      "type": "string",
      "enum": ["funnel", "analyzing", "backlog", "implementing", "validating", "deploying", "releasing", "done"],
      "description": "Current SAFe feature status"
    },
    "feature-type": {
      "type": "string",
      "enum": ["business", "enabler"],
      "description": "Type of SAFe feature"
    },
    "epic": {
      "type": "string",
      "description": "Parent epic (reference ID)"
    },
    "capability": {
      "type": "string",
      "description": "Related capability"
    },
    "art": {
      "type": "string",
      "description": "Agile Release Train"
    },
    "pi": {
      "type": "string",
      "description": "Program Increment"
    },
    "business-value": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Business value score"
    },
    "time-criticality": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Time criticality score"
    },
    "rr-oe": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Risk Reduction/Opportunity Enablement score"
    },
    "wsjf": {
      "type": "number",
      "description": "Weighted Shortest Job First score"
    },
    "feature-owner": {
      "type": "string",
      "description": "Feature owner"
    },
    "solution-architect": {
      "type": "string",
      "description": "Solution architect"
    },
    "teams": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Implementing teams"
    },
    "hypothesis": {
      "type": "string",
      "description": "Lean startup hypothesis"
    },
    "mvp": {
      "type": "string",
      "description": "Minimum Viable Product definition"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Feature author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "feature-type", "art", "pi", "business-value", "time-criticality", "rr-oe", "feature-owner", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Benefit Hypothesis",
        "Acceptance Criteria",
        "User Stories"
      ],
      "optional": [
        "Definition of Done",
        "Non-Functional Requirements",
        "Dependencies",
        "Risks",
        "Assumptions",
        "Constraints"
      ],
      "description": "Required and optional sections for SAFe feature documents"
    }
  }
}