{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/story-v1.0.json",
  "title": "Forgepoint User Story Schema",
  "description": "Schema for user story documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "story",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this story"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "ready", "in-progress", "done", "blocked"],
      "description": "Current status of the story"
    },
    "points": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Story points estimate"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Priority level"
    },
    "epic": {
      "type": "string",
      "description": "Epic this story belongs to (reference ID)"
    },
    "sprint": {
      "type": "string",
      "description": "Sprint identifier"
    },
    "assignee": {
      "type": "string",
      "description": "Person assigned to this story"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Story author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": ["Acceptance Criteria"],
      "optional": ["Scenarios", "Technical Notes", "Dependencies", "Related Items"],
      "description": "Required and optional sections for story documents"
    },
    "abstract": {
      "required": false,
      "description": "Optional abstract block after title"
    }
  }
}