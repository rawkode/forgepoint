{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/rfc-v1.0.json",
  "title": "Forgepoint Request for Comments Schema",
  "description": "Schema for RFC (Request for Comments) documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "rfc",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this RFC"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "rejected", "implemented", "withdrawn"],
      "description": "Current status of the RFC"
    },
    "number": {
      "type": "integer",
      "minimum": 1,
      "description": "Sequential RFC number"
    },
    "category": {
      "type": "string",
      "enum": ["technical", "process", "informational"],
      "description": "RFC category"
    },
    "author": {
      "type": "string",
      "description": "RFC author"
    },
    "reviewers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Assigned reviewers"
    },
    "shepherd": {
      "type": "string",
      "description": "RFC shepherd (optional)"
    },
    "implementation-tracking": {
      "type": "string",
      "description": "Link to implementation tracking (issue, epic, etc.)"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "number", "category", "author", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "format": "RFC {number}: {title}",
      "description": "Title must follow RFC numbering format"
    },
    "sections": {
      "required": [
        "Summary",
        "Motivation",
        "Detailed Design"
      ],
      "optional": [
        "Guide-level Explanation",
        "Reference-level Explanation", 
        "Drawbacks",
        "Rationale and Alternatives",
        "Prior Art",
        "Unresolved Questions",
        "Future Possibilities"
      ],
      "description": "Required and optional sections for RFC documents"
    }
  }
}