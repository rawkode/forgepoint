{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/bug-report-v1.0.json",
  "title": "Forgepoint Bug Report Schema",
  "description": "Schema for Bug Report documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "bug-report",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this bug report"
    },
    "status": {
      "type": "string",
      "enum": ["new", "confirmed", "assigned", "in-progress", "resolved", "closed", "rejected"],
      "description": "Current status of the bug"
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Bug severity level"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "urgent"],
      "description": "Bug priority"
    },
    "component": {
      "type": "string",
      "description": "Affected component or module"
    },
    "version": {
      "type": "string",
      "description": "Version where bug was found"
    },
    "environment": {
      "type": "string",
      "description": "Environment where bug occurred"
    },
    "reporter": {
      "type": "string",
      "description": "Person who reported the bug"
    },
    "assignee": {
      "type": "string",
      "description": "Person assigned to fix the bug"
    },
    "reproduced": {
      "type": "boolean",
      "description": "Whether the bug has been reproduced"
    },
    "regression": {
      "type": "boolean",
      "description": "Whether this is a regression"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "severity", "priority", "component", "reporter", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title describing the bug"
    },
    "sections": {
      "required": [
        "Description",
        "Steps to Reproduce",
        "Expected Behavior",
        "Actual Behavior"
      ],
      "optional": [
        "Environment Details",
        "Screenshots",
        "Logs", 
        "Workaround",
        "Additional Notes"
      ],
      "description": "Required and optional sections for bug report documents"
    }
  }
}