{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/okr-v1.0.json",
  "title": "Forgepoint OKR Schema",
  "description": "Schema for OKR (Objectives and Key Results) documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "okr",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this OKR"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "completed", "cancelled"],
      "description": "Current status of the OKR"
    },
    "period": {
      "type": "string",
      "pattern": "^\\d{4}-(Q[1-4]|H[1-2]|annual)$",
      "description": "Time period (e.g., 2024-Q1, 2024-H1, 2024-annual)"
    },
    "level": {
      "type": "string",
      "enum": ["company", "team", "individual"],
      "description": "OKR level"
    },
    "team": {
      "type": "string",
      "description": "Team responsible for this OKR"
    },
    "owner": {
      "type": "string",
      "description": "OKR owner"
    },
    "progress": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Progress percentage (0.0 to 1.0)"
    },
    "confidence": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "description": "Confidence level in achieving the OKR"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "OKR author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "period", "level", "owner", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title containing the Objective"
    },
    "sections": {
      "required": ["Key Results"],
      "optional": ["Context", "Initiatives", "Dependencies", "Updates"],
      "description": "Required and optional sections for OKR documents"
    },
    "keyResults": {
      "format": "checklist",
      "minimum": 1,
      "maximum": 5,
      "description": "Key Results should be formatted as checkboxes with metrics"
    }
  }
}