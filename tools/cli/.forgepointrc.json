{
  "schemaPath": "../../schema",
  "excludePatterns": [
    "node_modules/**",
    "dist/**",
    ".git/**",
    "*.tmp.adoc"
  ],
  "rules": {
    "requireId": true,
    "enforceStructure": true,
    "validateReferences": true,
    "checkIdUniqueness": true
  },
  "output": {
    "format": "text",
    "verbose": false
  }
}