{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/sprint-plan-v1.0.json",
  "title": "Forgepoint Sprint Plan Schema",
  "description": "Schema for Sprint Planning documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "sprint-plan",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this sprint plan"
    },
    "status": {
      "type": "string",
      "enum": ["planning", "active", "completed", "cancelled"],
      "description": "Current status of the sprint"
    },
    "sprint-number": {
      "type": "integer",
      "minimum": 1,
      "description": "Sprint number"
    },
    "team": {
      "type": "string",
      "description": "Team name"
    },
    "start-date": {
      "type": "string",
      "format": "date",
      "description": "Sprint start date (YYYY-MM-DD)"
    },
    "end-date": {
      "type": "string",
      "format": "date",
      "description": "Sprint end date (YYYY-MM-DD)"
    },
    "capacity": {
      "type": "integer",
      "minimum": 0,
      "description": "Team capacity in story points"
    },
    "velocity": {
      "type": "integer",
      "minimum": 0,
      "description": "Historical team velocity"
    },
    "sprint-goal": {
      "type": "string",
      "description": "Primary sprint goal"
    },
    "scrum-master": {
      "type": "string",
      "description": "Scrum master"
    },
    "product-owner": {
      "type": "string",
      "description": "Product owner"
    },
    "team-members": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Sprint team members"
    },
    "holidays": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Holidays or time off during sprint"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Sprint plan author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "sprint-number", "team", "start-date", "end-date", "sprint-goal", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "format": "Sprint {sprint-number} Plan - {team}",
      "description": "Title should include sprint number and team"
    },
    "sections": {
      "required": [
        "Sprint Goal",
        "Sprint Backlog",
        "Team Capacity"
      ],
      "optional": [
        "Previous Sprint Review",
        "Risks and Dependencies",
        "Definition of Done",
        "Sprint Events",
        "Notes"
      ],
      "description": "Required and optional sections for sprint plan documents"
    }
  }
}