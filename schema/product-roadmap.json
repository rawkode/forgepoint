{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forgepoint.dev/schemas/product-roadmap-v1.0.json",
  "title": "Forgepoint Product Roadmap Schema",
  "description": "Schema for Product Roadmap documents in Forgepoint",
  "type": "object",
  "properties": {
    "forgepoint-type": {
      "const": "product-roadmap",
      "description": "Document type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for this product roadmap"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "active", "archived"],
      "description": "Current status of the roadmap"
    },
    "product": {
      "type": "string",
      "description": "Product name"
    },
    "timeframe": {
      "type": "string",
      "enum": ["quarterly", "annual", "2-year", "3-year"],
      "description": "Roadmap timeframe"
    },
    "owner": {
      "type": "string",
      "description": "Roadmap owner"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key stakeholders"
    },
    "last-update": {
      "type": "string",
      "format": "date",
      "description": "Last roadmap update (YYYY-MM-DD)"
    },
    "review-frequency": {
      "type": "string",
      "enum": ["weekly", "monthly", "quarterly", "annual"],
      "description": "How often roadmap is reviewed"
    },
    "visibility": {
      "type": "string",
      "enum": ["internal", "public", "customer", "partner"],
      "description": "Who can see this roadmap"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Roadmap author"
    },
    "schema-version": {
      "const": "1.0",
      "description": "Schema version for this document type"
    }
  },
  "required": ["forgepoint-type", "id", "status", "product", "timeframe", "owner", "schema-version"],
  "additionalProperties": false,
  "structuralRequirements": {
    "title": {
      "required": true,
      "description": "Document must have a level-0 title"
    },
    "sections": {
      "required": [
        "Strategic Themes",
        "Timeline",
        "Major Initiatives"
      ],
      "optional": [
        "Overview",
        "Current State",
        "Key Milestones",
        "Dependencies",
        "Resource Allocation",
        "Risks",
        "Success Metrics"
      ],
      "description": "Required and optional sections for product roadmap documents"
    }
  }
}